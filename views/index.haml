!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %title A stopwatch
    %link{:href => "http://fonts.googleapis.com/css?family=VT323", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "/stylesheets/reset.css", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "/stylesheets/font-awesome.css", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "http://fonts.googleapis.com/css?family=Source+Sans+Pro:200", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "/stylesheets/themes/rams.css", :rel => "stylesheet", :type => "text/css"}
    %script{:src => "/javascripts/jquery-1.6.1.min.js"}
    %script{:src => "/javascripts/animate.js"}
    %script{:src => "/javascripts/effects.js"}
    %script{:src => "/javascripts/timer.js"}
  %body
    #stopwatch_container
      #stopwatch
        %p#timer
          00
          %span> :
          00
          %span> :
          00
      .clear
      #buttons
        %a#start.button{:href => "#", :onclick => "startTimer();"}
          %i.icon-play
        %a#pause.button{:href => "#", :onclick => "pauseTimer()"}
          %i.icon-pause
        %a#reset.button{:href => "#", :onclick => "resetTimer()"}
          %i.icon-repeat
        .clear